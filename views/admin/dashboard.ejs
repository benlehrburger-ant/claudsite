<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard | Anthropic</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="icon" type="image/png" sizes="32x32" href="/images/logo.png">
  <link rel="apple-touch-icon" href="/images/logo.png">
</head>
<body style="background: var(--background-light);">
  <!-- Admin Header -->
  <header class="admin-header">
    <div class="admin-header-inner">
      <a href="/admin" class="admin-logo">
        <img src="/images/logo.png" alt="Anthropic" height="24" style="margin-right: 8px;">
        Admin
      </a>
      <nav class="admin-nav">
        <a href="/">View Site</a>
        <a href="/admin">Dashboard</a>
        <a href="/admin/posts/new">New Post</a>
      </nav>
    </div>
  </header>

  <!-- Dashboard Content -->
  <main class="admin-container">
    <h1 class="admin-title">Blog Posts</h1>

    <div class="admin-actions">
      <a href="/admin/posts/new" class="btn btn-primary">
        <svg viewBox="0 0 16 16" fill="none" width="16" height="16">
          <path d="M8 3v10M3 8h10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
        New Post
      </a>
    </div>

    <% if (posts.length === 0) { %>
      <div style="text-align: center; padding: 4rem 2rem; background: var(--background-white); border-radius: 12px;">
        <p style="color: var(--text-muted); margin-bottom: 1.5rem;">No posts yet. Create your first post!</p>
        <a href="/admin/posts/new" class="btn btn-primary">Create Post</a>
      </div>
    <% } else { %>
      <table class="posts-table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Status</th>
            <th>Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% posts.forEach(function(post) { %>
          <tr>
            <td>
              <strong><%= post.title %></strong>
              <br>
              <small style="color: var(--text-muted);">/blog/<%= post.slug %></small>
            </td>
            <td><%= post.category %></td>
            <td>
              <span class="status-badge <%= post.published ? 'published' : 'draft' %>">
                <%= post.published ? 'Published' : 'Draft' %>
              </span>
            </td>
            <td><%= new Date(post.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></td>
            <td>
              <div class="table-actions">
                <% if (post.published) { %>
                  <a href="/blog/<%= post.slug %>" target="_blank">View</a>
                <% } %>
                <a href="/admin/posts/<%= post.id %>/edit">Edit</a>
                <button onclick="deletePost(<%= post.id %>, '<%= post.title.replace(/'/g, "\\'") %>')">Delete</button>
              </div>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </main>

  <script src="/js/main.js"></script>
  <script>
    async function deletePost(id, title) {
      if (!confirm(`Are you sure you want to delete "${title}"? This action cannot be undone.`)) {
        return;
      }

      try {
        const response = await fetch(`/api/posts/${id}`, {
          method: 'DELETE'
        });

        const data = await response.json();

        if (data.success) {
          showToast('Post deleted successfully', 'success');
          setTimeout(() => location.reload(), 1000);
        } else {
          throw new Error(data.error);
        }
      } catch (error) {
        showToast('Failed to delete post: ' + error.message, 'error');
      }
    }
  </script>
</body>
</html>
