{
  "name": "anthropic-clone",
  "version": "1.0.0",
  "description": "Anthropic website clone with blog backend",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node server.ts",
    "dev:js": "nodemon server.js",
    "test": "npm run build && node --no-webstorage node_modules/jest/bin/jest.js",
    "test:playwright": "npm run build && playwright test",
    "dev:all": "concurrently \"npm run dev\" \"cd backend && ./mvnw spring-boot:run\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "better-sqlite3": "^11.6.0",
    "body-parser": "^1.20.2",
    "ejs": "^3.1.9",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/body-parser": "^1.19.6",
    "@types/express": "^5.0.3",
    "@types/node": "^24.8.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testEnvironmentOptions": {},
    "testPathIgnorePatterns": [
      "/node_modules/",
      "\\.playwright\\.test\\.js$"
    ]
  }
}
