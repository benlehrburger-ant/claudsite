{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["server.ts", "types/**/*"],
  "exclude": ["node_modules", "dist", "public", "**/*.test.*"]
}
